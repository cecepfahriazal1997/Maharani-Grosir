<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:id="@+id/contentSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/contentCart"
        android:background="@drawable/border_round_white">

        <ImageView
            android:id="@+id/search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/search" />

        <EditText
            android:id="@+id/keyword"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/scan"
            android:layout_toRightOf="@+id/search"
            android:background="@null"
            android:fontFamily="@font/futura_medium"
            android:hint="Cari produk disini ..."
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/scan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/qrcode" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contentCart"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/contentNotif"
        android:background="@drawable/border_round_white">

        <ImageView
            android:id="@+id/cart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/cart" />

        <TextView
            android:id="@+id/badge_cart"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/circle_primary"
            android:fontFamily="@font/futura_bold"
            android:gravity="center"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="8dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contentNotif"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:background="@drawable/border_round_white">

        <ImageView
            android:id="@+id/notification"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/notification" />

        <TextView
            android:id="@+id/badge_notification"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/circle_primary"
            android:fontFamily="@font/futura_bold"
            android:gravity="center"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="8dp"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>