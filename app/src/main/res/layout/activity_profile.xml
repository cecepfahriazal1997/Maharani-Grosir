<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingBottom="32dp">

            <RelativeLayout
                android:id="@+id/groupMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:background="@drawable/border_round_white"
                android:padding="16dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/seller"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/icon"
                    android:fontFamily="@font/futura_medium"
                    android:text="Saya memiliki usaha :"
                    android:textColor="@color/mediumBlack"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/icon"
                    android:fontFamily="@font/futura_medium"
                    android:text="-"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp" />

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@+id/title"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    app:iiv_color="@color/darkGray"
                    app:iiv_icon="gmd-keyboard-arrow-right" />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_round_white"
                android:drawableStart="@drawable/profile"
                android:drawablePadding="16dp"
                android:drawableTint="@color/darkGray"
                android:hint="Masukan nama ..."
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_round_white"
                android:drawableStart="@drawable/mail"
                android:drawablePadding="16dp"
                android:drawableTint="@color/darkGray"
                android:hint="Masukan email ..."
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_round_white"
                android:drawableStart="@drawable/phone"
                android:drawablePadding="16dp"
                android:drawableTint="@color/darkGray"
                android:hint="Masukan no. telepon ..."
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/wa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_round_white"
                android:drawableStart="@drawable/whatsapp"
                android:drawablePadding="16dp"
                android:drawableTint="@color/darkGray"
                android:hint="Masukan no. whatsapp ..."
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/identity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_round_white"
                android:drawableStart="@drawable/card_name"
                android:drawablePadding="16dp"
                android:drawableTint="@color/darkGray"
                android:hint="Masukan no. KTP ..."
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_round_white"
                android:drawableStart="@drawable/location"
                android:drawablePadding="16dp"
                android:drawableTint="@color/darkGray"
                android:foregroundGravity="top"
                android:gravity="top"
                android:hint="Masukan alamat rumah ..."
                android:lines="5"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:id="@+id/list_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/futura_medium"
                    android:text="Foto Diri"
                    android:textColor="@color/darkGray"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/futura_medium"
                    android:text="Foto Kios / Rumah"
                    android:textColor="@color/darkGray"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/imagePicker"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_round_white">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/selectImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="16dp"
                        app:riv_mutate_background="true"
                        app:riv_oval="false" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iconImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/camera"
                            android:tint="@color/darkGray" />

                        <TextView
                            android:id="@+id/titleImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/futura_medium"
                            android:text="Pick Image"
                            android:textColor="@color/darkGray"
                            android:textSize="14dp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/imagePicker2"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_round_white">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/selectImage2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="16dp"
                        app:riv_mutate_background="true"
                        app:riv_oval="false" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iconImage2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/camera"
                            android:tint="@color/darkGray" />

                        <TextView
                            android:id="@+id/titleImage2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/futura_medium"
                            android:text="Pick Image"
                            android:textColor="@color/darkGray"
                            android:textSize="14dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                fancy:fb_defaultColor="@color/colorPrimary"
                fancy:fb_focusColor="@color/colorPrimaryDark"
                fancy:fb_radius="10dp"
                fancy:fb_text="Simpan"
                fancy:fb_textColor="@color/white"
                fancy:fb_textFont="@font/futura_medium"
                fancy:fb_textFontRes="@font/futura_medium"
                fancy:fb_textGravity="center"
                fancy:fb_textSize="14dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>