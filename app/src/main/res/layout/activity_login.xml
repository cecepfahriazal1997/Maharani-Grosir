<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp">

        <ImageView
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:src="@drawable/logo_high"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_medium"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="@string/app_name"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/cerebrisans_medium"
            android:text="Selamat Datang, "
            android:textColor="@color/black"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/cerebrisans_light"
            android:text="Grosir online terpercaya dan termurah. \nSemua produk yang kamu cari ada disini."
            android:textColor="@color/mediumBlack"
            android:textSize="16dp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@drawable/border_round_gray"
            android:hint="Email / no. handphone"
            android:padding="16dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/username"
            android:drawablePadding="12dp"
            android:drawableTint="@color/mediumBlack"
            android:textSize="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:errorEnabled="false"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/darkGray">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_round_gray"
                android:hint="Nomor PIN"
                android:drawableStart="@drawable/lock"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="12dp"
                android:drawableTint="@color/mediumBlack"
                android:padding="16dp"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            fancy:fb_defaultColor="@color/colorPrimary"
            fancy:fb_focusColor="@color/colorPrimaryDark"
            fancy:fb_radius="10dp"
            fancy:fb_text="Login"
            fancy:fb_textColor="@color/white"
            fancy:fb_textFont="@font/futura_medium"
            fancy:fb_textFontRes="@font/futura_medium"
            fancy:fb_textGravity="center"
            fancy:fb_textSize="14dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            fancy:fb_defaultColor="@color/white"
            fancy:fb_focusColor="@color/colorAccent"
            fancy:fb_borderWidth="1dp"
            fancy:fb_borderColor="@color/colorPrimary"
            fancy:fb_radius="10dp"
            fancy:fb_text="Daftar"
            fancy:fb_textColor="@color/colorPrimary"
            fancy:fb_textFont="@font/futura_medium"
            fancy:fb_textFontRes="@font/futura_medium"
            fancy:fb_textGravity="center"
            fancy:fb_textSize="14dp" />
    </LinearLayout>
</ScrollView>